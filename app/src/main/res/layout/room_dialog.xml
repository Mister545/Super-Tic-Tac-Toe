<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RoomDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background_tic_tac_toe">

        <Button
            android:id="@+id/bSignInRoom"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_main"
            android:text="Sign in Room"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/eCodeRoom"
            app:layout_constraintStart_toStartOf="@+id/eCodeRoom"
            app:layout_constraintTop_toBottomOf="@+id/eCodeRoom" />

        <Button
            android:id="@+id/bCreateRoomSimple"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_main"
            android:text="Create Room Simple"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/bSignInRoom"
            app:layout_constraintStart_toStartOf="@+id/bSignInRoom"
            app:layout_constraintTop_toBottomOf="@+id/bSignInRoom" />

        <Button
            android:id="@+id/bCreateRoomSuper"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button_main"
            android:text="Create Room Super"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bCreateRoomSimple"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/bCreateRoomSimple"
            app:layout_constraintTop_toBottomOf="@+id/bCreateRoomSimple"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Rooms"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/eCodeRoom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Code Room"
            android:inputType="number|numberDecimal|numberSigned"
            android:textColorHint="#6E6E6E"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#FF0000"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/tWinner"
            app:layout_constraintStart_toStartOf="@+id/tWinner"
            app:layout_constraintTop_toBottomOf="@+id/tWinner" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>